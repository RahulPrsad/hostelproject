<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Students - Hostel Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include('../partials/navbar') %>
  <div class="flex">
    <%- include('../partials/sidebar') %>
    <main class="flex-1 p-6">
      <h1 class="text-2xl font-bold text-gray-800 mb-6">All Students</h1>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead><tr class="bg-gray-50 border-b"><th class="text-left p-3">Name</th><th class="text-left p-3">Email</th><th class="text-left p-3">Branch</th><th class="text-left p-3">Year</th><th class="text-left p-3">Parent</th><th class="text-left p-3">Call</th></tr></thead>
            <tbody>
              <% students.forEach(s => { %>
                <tr class="border-b">
                  <td class="p-3"><%= s.name %></td>
                  <td class="p-3"><%= s.email %></td>
                  <td class="p-3"><%= s.branch || '-' %></td>
                  <td class="p-3"><%= s.year || '-' %></td>
                  <td class="p-3"><%= s.parentName || '-' %></td>
                  <td class="p-3"><% if (s.parentPhone) { %><a href="tel:<%= s.parentPhone %>" class="text-indigo-600 hover:underline">Call Parent</a><% } else { %>-<% } %></td>
                </tr>
              <% }); %>
              <% if (students.length === 0) { %><tr><td colspan="6" class="p-4 text-gray-500">No students</td></tr><% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>
</body>
</html>
