<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Equipment - Hostel Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include('../partials/navbar') %>
  <div class="flex">
    <%- include('../partials/sidebar') %>
    <main class="flex-1 p-6">
      <h1 class="text-2xl font-bold text-gray-800 mb-6">Sports Equipment</h1>
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="mb-4 p-3 bg-green-100 text-green-700 rounded"><%= success %></div>
      <% } %>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="mb-4 p-3 bg-red-100 text-red-700 rounded"><%= error %></div>
      <% } %>
      <form action="/admin/equipment" method="POST" class="bg-white rounded-lg shadow p-6 max-w-md space-y-4 mb-8">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Student ID</label>
          <input type="text" name="studentId" required class="w-full px-3 py-2 border border-gray-300 rounded">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Equipment Name</label>
          <input type="text" name="equipmentName" required class="w-full px-3 py-2 border border-gray-300 rounded" placeholder="e.g. Cricket Bat">
        </div>
        <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Issue Equipment</button>
      </form>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead><tr class="bg-gray-50 border-b"><th class="text-left p-3">Student</th><th class="text-left p-3">Equipment</th><th class="text-left p-3">Issue Date</th><th class="text-left p-3">Return</th><th class="text-left p-3">Damage</th></tr></thead>
            <tbody>
              <% equipment.forEach(e => { %>
                <tr class="border-b">
                  <td class="p-3"><%= e.studentId ? e.studentId.name : 'N/A' %></td>
                  <td class="p-3"><%= e.equipmentName %></td>
                  <td class="p-3"><%= new Date(e.issueDate).toLocaleDateString() %></td>
                  <td class="p-3">
                    <% if (!e.returnDate) { %>
                      <form action="/admin/equipment/<%= e._id %>/return" method="POST" class="inline"><button type="submit" class="text-green-600 hover:underline">Mark Return</button></form>
                    <% } else { %><%= new Date(e.returnDate).toLocaleDateString() %><% } %>
                  </td>
                  <td class="p-3">
                    <% if (!e.returnDate) { %>
                      <form action="/admin/equipment/<%= e._id %>/damage" method="POST" class="inline">
                        <input type="text" name="damageStatus" placeholder="Damage note" class="border rounded px-2 py-1 text-xs w-24">
                        <button type="submit" class="text-red-600 hover:underline text-xs">Log</button>
                      </form>
                    <% } else { %><%= e.damageStatus || '-' %><% } %>
                  </td>
                </tr>
              <% }); %>
              <% if (equipment.length === 0) { %><tr><td colspan="5" class="p-4 text-gray-500">No equipment records</td></tr><% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>
</body>
</html>
